<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatisticsFragment">

    <com.anychart.AnyChartView
        android:id="@+id/statistics_chart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin = "10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_prev"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:text="Предыдущий"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statistics_chart" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:text="Следующий"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_prev"
        app:layout_constraintTop_toBottomOf="@+id/statistics_chart" />

</androidx.constraintlayout.widget.ConstraintLayout>